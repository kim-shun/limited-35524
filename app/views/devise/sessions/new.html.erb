<%= render "shared/second-header" %>
<div class="form-field">
<h2>ログイン</h2>

<%# ログイン時のエラーメッセージ  %>
    <div class='login-flash-message'>
      <%= flash[:notice] %>
      <%= flash[:alert] %>
    </div>
    <%#= form_with model: @user, url: user_session_path, id: 'new_user', class: 'new_user', local: true do |f| %>
 
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    メールアドレス<br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    パスワード<br />
    <%= f.password_field :password, autocomplete: "current-password" %>
  </div>

  <%# <% if devise_mapping.rememberable? %>
    <%# <div class="field">
      <%= f.check_box :remember_me %>
      <%# <%= f.label :remember_me %>
    <%# </div>
  <% end %>  

  <div class="actions">
    <%= f.submit "ログイン", class: 'action-btn' %>
  </div>
<% end %>
  <%= link_to "ユーザー登録がまだの方はこちら", new_user_registration_path, class: 'action-btn' %>
</div>

